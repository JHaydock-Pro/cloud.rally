{% set flavor_name = flavor_name or "m1.tiny" %}
{% set image_name = image_name or "ScientificLinux-7-NoGui" %}
{
    "VMTasks.boot_runcommand_delete": [

        {
            "args": {
                "flavor": {
                    "name": "{{flavor_name}}"
                },
                "image": {
                    "name": "^{{image_name}}$"
                },
                "fixed_network": "public",
                "use_floating_ip": false,
                "force_delete": false,
                "command": {
                    "interpreter": "/bin/sh",
                    "script_file": "instance_test.sh"
                },
                "username": "fedora"
            },
            "runner": {
                "type": "constant",
                "times": 4,
                "concurrency": 2
            },
            "context": {
            },
            "sla": {
                "failure_rate": { "max": 0.0}
            }
        }
    ]
}


