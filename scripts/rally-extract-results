#!/usr/bin/python
import time
import json
import requests
import sys
from ConfigParser import SafeConfigParser


# Read from config file
parser = SafeConfigParser()
try:
   parser.read('/etc/openstack-utils/rally-tester.conf')
   host = parser.get('db', 'host')
   database = parser.get('db', 'database')
   username = parser.get('auth', 'username')
   password = parser.get('auth', 'password')
   instance = parser.get('cloud','instance')
except:
   print 'Unable to read from config file'
   sys.exit(1)

url = 'http://'+host+'/write?db='+database

nowtime = time.localtime()

#print nowtime
print "Time: " + str(nowtime.tm_hour) + ":" + str(nowtime.tm_min) + "-" + str(nowtime.tm_mday) + "/" + str(nowtime.tm_mon) + "/" + str(nowtime.tm_year)
print ""

if nowtime.tm_hour >= 9 and nowtime.tm_hour <=16 and nowtime.tm_wday <= 4:
    workhours = True
else:
    workhours = False



with open(sys.argv[1]) as data_file:
    data = json.load(data_file)

datastring = ''
metrics = []

print type(data)

if isinstance(data, dict):
    print data
    for key in data.keys():
        print key
        metric = {}
        metric['fields'] = {}
        metric['measurement'] = key
        metric['fields']['success'] = 0
        metrics.append(metric)
else:
    for test in data:
        print test['key']['name']
        for result in test['result']:
            metric = {}
            metric['fields'] = {}
            metric['measurement'] = test['key']['name']

            metric['fields']['success'] = 1
            for sla in test['sla']:
                print sla
                print "Success: " + str(sla['success'])
                if sla['success'] == False:
                   metric['fields']['success'] = 0

            print result['duration']
            metric['fields']['duration'] = result['duration']
            #metrics.append(metric)
            #print result['timestamp']
            for atomic_action in result['atomic_actions']:
                metric['fields'][atomic_action] = result['atomic_actions'][atomic_action]
            metrics.append(metric)
                #rint atomic_action + ' = ' + str(result['atomic_actions'][atomic_action])
            print ""


#print ""
#print "Metrics"
#print metrics

json_metrics = []
for metric in metrics:
        #print metric
    metric['tags'] = { 'instance': instance }
    json_metrics.append(metric)
    for field in metric['fields']:
        datastring += metric['measurement'].replace('.','-')+',instance='+metric['tags']['instance']+',workhours='+str(workhours)
        datastring +=' '+field.replace('.','-')+'=' + str(metric['fields'][field])
        datastring += "\n"

datastring = datastring

#print ""
#print "JSON Metrics:"
#print json_metrics

print ""
print "Datastring:"
print datastring

print ""
print "Request Url:"
r = requests.post(url,data=datastring,auth=(username,password))
print r.text
print r

if "success=0" in datastring:
  print "Fail"
# Add exit code 2
else:
  print "Success"
# Add exit code 0

